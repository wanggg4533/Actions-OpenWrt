CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

# 基础组件
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl-openssl=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-theme-argon=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_uhttpd=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_libustream-openssl=y

# SSR 替代 Clash
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_shadowsocks-libev-ssr-redir=y
CONFIG_PACKAGE_shadowsocks-libev-ssr-server=y
CONFIG_PACKAGE_shadowsocks-libev-ssr-local=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_iptables-mod-tproxy=y

# 网络相关常用插件（保留）
CONFIG_PACKAGE_luci-app-upnp=y
CONFIG_PACKAGE_luci-app-wol=y
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_ddns-scripts_cloudflare.com-v4=y
CONFIG_PACKAGE_ddns-scripts-services=y

# 国家码设置（CN）
CONFIG_PACKAGE_wireless-regdb=y
CONFIG_CFG80211_INTERNAL_REGDB=y

# 精简：取消 IPv6 支持
# CONFIG_PACKAGE_dnsmasq_full_dhcpv6 is not set
# CONFIG_PACKAGE_ipv6helper is not set
# CONFIG_PACKAGE_luci-proto-ipv6 is not set
# CONFIG_PACKAGE_odhcp6c is not set
# CONFIG_PACKAGE_odhcpd-ipv6only is not set
# CONFIG_PACKAGE_kmod-ipv6 is not set
# CONFIG_PACKAGE_kmod-ip6tables is not set

# 其它保留
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt76x2=y
CONFIG_PACKAGE_kmod-mac80211=y

# 取消：Docker、多语言支持、Samba 文件共享
# CONFIG_PACKAGE_docker is not set
# CONFIG_PACKAGE_luci-lib-i18n is not set
# CONFIG_PACKAGE_luci-app-samba4 is not set

# 保留固件管理能力
CONFIG_PACKAGE_luci-app-flashops=y
