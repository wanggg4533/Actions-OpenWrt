# 系统
CONFIG_TARGET_ipq40xx=y
CONFIG_TARGET_ipq40xx_generic=y
CONFIG_TARGET_ipq40xx_generic_DEVICE_phicomm_k2p=y

# 网络
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_ddns-scripts_aliyun=y
CONFIG_PACKAGE_ddns-scripts_dnspod=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_luci-app-ssr-plus=y
CONFIG_PACKAGE_shadowsocksr-libev=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-redir=y
CONFIG_PACKAGE_shadowsocksr-libev-ssr-server=y
CONFIG_PACKAGE_mwan3=y
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_luci-app-webdav=y

# 安全与工具
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 禁用功能（节省空间）
# 禁用 Docker 和 Samba
CONFIG_PACKAGE_luci-app-dockerman=n
CONFIG_PACKAGE_samba4=n

# 禁用多语言和其他主题
CONFIG_PACKAGE_luci-i18n-en=y
CONFIG_PACKAGE_luci-theme-material=n
CONFIG_PACKAGE_luci-theme-argon=n
