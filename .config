CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_phicomm_k2p=y

# 基础设置
CONFIG_BUSYBOX_CUSTOM=y
CONFIG_DEVEL=y
CONFIG_TARGET_PREINIT_DISABLE_FAILSAFE=y
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_KERNEL_BUILD_USER="OpenWRT Builder"
CONFIG_KERNEL_BUILD_DOMAIN="github.com"

# LuCI UI（仅保留 Bootstrap）
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
# 取消其他主题
# CONFIG_PACKAGE_luci-theme-argon is not set
# CONFIG_PACKAGE_luci-theme-material is not set

# 移除 IPv6
# CONFIG_IPV6 is not set
# CONFIG_PACKAGE_ipv6helper is not set

# 移除 Docker
# CONFIG_PACKAGE_dockerd is not set
# CONFIG_PACKAGE_luci-app-dockerman is not set

# 保留 Clash（OpenClash）
CONFIG_PACKAGE_luci-app-openclash=y

# 保留 DDNS
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts_aliyun=y
CONFIG_PACKAGE_ddns-scripts_dnspod=y
CONFIG_PACKAGE_luci-app-ddns=y

# 保留 MWAN3
CONFIG_PACKAGE_luci-app-mwan3=y
CONFIG_PACKAGE_mwan3=y

# SSH
CONFIG_PACKAGE_dropbear=y

# WebDAV 客户端支持
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_luci-app-webadmin=y
CONFIG_PACKAGE_luci-app-webdav=y

# 取消 Samba
# CONFIG_PACKAGE_luci-app-samba4 is not set
# CONFIG_PACKAGE_samba4-server is not set

# 取消多语言支持
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
# CONFIG_PACKAGE_luci-i18n-base-en is not set

# 系统实用工具
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_nano=y
CONFIG_PACKAGE_luci-app-firewall=y

# 精简工具包体积
CONFIG_PACKAGE_luci-app-upnp=n
CONFIG_PACKAGE_luci-app-vlmcsd=n
CONFIG_PACKAGE_luci-app-zerotier=n

# 开启 UPX 压缩和去除调试符号（减少体积）
CONFIG_STRIP_KERNEL_EXPORTS=y
CONFIG_USE_MKLIBS=y
CONFIG_KERNEL_KALLSYMS=n
CONFIG_DEBUG=n
